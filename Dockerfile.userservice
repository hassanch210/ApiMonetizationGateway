# UserService Dockerfile
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY . .
RUN dotnet restore ApiMonetizationGateway.sln
RUN dotnet publish Gateway/UserService/ApiMonetizationGateway.UserService/ApiMonetizationGateway.UserService.csproj -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
COPY --from=build /app/publish .
EXPOSE 5001
ENV ASPNETCORE_URLS=http://0.0.0.0:5001
ENTRYPOINT ["dotnet", "ApiMonetizationGateway.UserService.dll"]
